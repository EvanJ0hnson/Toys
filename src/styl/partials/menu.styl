.nav-left
  position: fixed
  display: none
  background-color: #FAFAFA
  top: 0
  left: 0
  width: 225px
  height: 100vh
  margin: 0
  padding: 0
  z-index: 5

.nav-left__overlay
  display: none
  position: fixed
  background-color: black
  opacity: .25
  top: 0
  left: 225px
  width: 100%
  height: 100%
  z-index: 3

.nav-left__switcher
  display: none
  position: fixed
  left: 225px
  top: 0
  margin: 1.25rem
  z-index: 5

.nav-left__list
  padding: 0
  margin: 0
  list-style: none
  
.nav-left__list-item
  padding: 0
  margin: 0

.nav-left__link
  color: gray
  display: block
  padding: 1rem
  text-decoration: none
  padding-left: 2.25rem
  transition: all .15s ease
    
.nav-left__link:hover
  color: white
  background-color: rgba(0,0,0,.25)

@media only screen and (min-width: 414px) and (max-width: 736px) and (orientation: landscape)
  .nav-left__link
    padding: .45rem
    padding-left: 2.25rem

.nav-top
  position: fixed
  top: 0
  width: 100%
  height: 3rem
  background-color: rgba(33,150,243,.85)
  z-index: 2
  margin: 0
  padding: 0
  // overflow: hidden
    
.nav-top__hidden-row
  display: none
  
.nav-top__list
  display: inline-block
  float: right
  padding: 0
  margin: 0
  list-style: none
  color: #FAFAFA

.nav-top__list-item
  // padding: 0
  // margin: 0
  display: inline-block
  
  
.nav-top__link
  font-size: .85rem
  letter-spacing: .04rem
  cursor: pointer
  display: inline-block
  color: #FAFAFA
  border-bottom: .4rem solid rgba(0,0,0,0)
  text-decoration: none
  padding: .7rem .25rem .25rem .25rem
  margin: 0
  margin-right: 1.5rem
  text-transform: uppercase
  transition: border .2s ease

.nav-top__link:hover
  border-color: #FAFAFA
  
.nav-top__list--menu
  float: left
  padding: 0
  // padding-left: 1.5rem

.nav-top__link--menu,
.nav-top__link--menu:hover
  border: none
  margin-left: 1.5rem
  
.nav-top__link--categories
  display: none
  
@media screen and (max-width: 1024px)
  .nav-top__link
    font-size: .65rem
    letter-spacing: .05rem
    margin-right: .75rem

// iPhone 6 & iPhone 6 Plus
@media only screen and (min-width : 414px) and (max-width : 736px) and (orientation : landscape)
  .nav-top__link
    font-size: .55rem
    letter-spacing: .08rem
    margin-right: .2rem

// Отображение меню категорий на < iPhone 5S
@media only screen and (min-width : 320px) and (max-width : 568px)
  .nav-top
    background-color: rgba(33,150,243,.75)

  .nav-top__link
    display: none
    font-size: .85rem
    letter-spacing: .03rem
    margin-left: .75rem
  
  .nav-top__link--categories
    display: inline-block
    
  .nav-top__link--menu
    display: inline-block
