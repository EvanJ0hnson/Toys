.cart-table
  width: 100%
  text-align: right
  border-collapse: collapse;
  td
    padding: .5rem
  tr:nth-child(even)
    background-color: rgba(0, 0, 0, .025)
  
.cart-table__header
  color: rgba(0,0,0,.6)
  
.cart 
  position: fixed
  right: 0
  bottom: 0
  margin-right: 2.5%
  margin-bottom: 2%
  z-index: 900
  width: 60px
  height: 60px