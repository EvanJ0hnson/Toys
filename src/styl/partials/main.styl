body
  background: url(../img/bg.jpg) repeat

.cart-table
  width: 100%
  
.cart 
  position: fixed
  right: 0
  bottom: 0
  margin-right: 2.5%
  margin-bottom: 2%
  z-index: 900
  width: 60px
  height: 60px
  
.admin__textarea
  display: block
  width: 100%
  height: auto

// Fix for Bootstrap
a:hover,
a:visited,
a:active,
a:focus
  text-decoration: none

$carouselMaxHeight = 80 vh
.carousel
  max-height: $carouselMaxHeight
  
.carousel-inner
  max-height: $carouselMaxHeight

// MDL
.mdl-badge[data-badge]:after
  font-size: 1rem
  width: 18px
  height: 18px

.mdl-layout__drawer-button
  color: #757575
  background-color: #fafafa
  
.mdl-card
  width: 100%

.mdl-card__title
  height: 150px

.toys-card
  height: 500px

.mdl-card__menu
  color: grey