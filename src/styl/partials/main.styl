body
  background: url(../img/bg.jpg) repeat
  
.price-table
  table-layout: fixed
  width: 100%
  text-align: center
  // border-collapse: collapse;
  td
    padding: .5rem
  tr
    background-color: #FAFAFA
  
.price-table__header
  color: rgba(0,0,0,.6)
  
.toys-card__availability
  background-color: #43A047
  // GREEN 600
  color: rgb(255,255,255)
  border-top: none !important
  text-align: center
  padding-top: .75rem
  padding-bottom: .75rem
  padding-left: 0
  padding-right: 0

.toys-card__availability--isReserved
  background-color: #78909C 
  // Blue Grey 400

.cart-table
  width: 100%
  text-align: right
  border-collapse: collapse;
  td
    padding: .5rem
  tr:nth-child(even)
    background-color: rgba(0, 0, 0, .025)
  
.cart-table__header
  color: rgba(0,0,0,.6)
  
.cart 
  position: fixed
  right: 0
  bottom: 0
  margin-right: 2.5%
  margin-bottom: 2%
  z-index: 900
  width: 60px
  height: 60px
  
.admin__textarea
  display: block
  width: 100%
  height: auto
  
